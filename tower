#include <iostream>
#include <cstdio>
#include <string>
#include <Windows.h>
#include <algorithm>

using namespace std;

struct tower {
	char first;
	char last;
	int blocks;
};

bool towerCompare(tower lhs, tower rhs) { return lhs.first < rhs.first; }

//cout << monster.first << monster.last << monster.blocks;


int main()
{
	int ile, maxt = 2;
	cin >> ile;
	tower *towers = new tower[ile];
	string word;
	for (int i = 0; i < ile; i++)
	{
		cin >> word;
		int a = word.size();
		a -= 1;
		(towers[i]).blocks = 1;
		(towers[i]).first = word[0];
		for (int j = 0; j < a; j++)
		{
			if (word[j] <= word[j + 1])
				(towers[i]).blocks++;
			else
			{
				(towers[i]).last = word[j];
				break;
			}
		}
	}
	sort(towers,towers+ile,towerCompare);
	tower monster;
	int przedzial=0;
	for (int i = 0;i < ile; i++)
	{
		monster = (towers[i]);
		przedzial = 0;
		if(i<ile)
			for (int j = 0; j < ile; j++)
			{
				if (i == j)continue;
				if (monster.last > (towers[j]).first)
					break;
				else
					przedzial++;
			}
		else
			for (int j = ile - 1; j >= 0; j--)
			{
				if (i == j)continue;
				if (monster.last > (towers[j]).first)
					break;
				else
					przedzial++;
			}
		for (int j = 0; j < ile; j++)
		{
			if (i == j)continue;
			if (monster.last < (towers[j]).first)
			{

			}
		}



	}

	delete towers;
	return 0;
}
